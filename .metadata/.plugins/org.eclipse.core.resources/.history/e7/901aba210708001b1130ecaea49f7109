

public class Produto {

	private int id;
	private String nome;
	private float preco;

	public Produto(int id, String nome, float preco) {
		super();
		this.id = id;
		this.nome = nome;
		this.preco = preco;
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		if (id <= 0) {
			throw new RuntimeException("ID de produto não pode ser menor ou igual a 0");
		}
		this.id = id;
	}

	public String getNome() {
		if ((nome == null) || nome.length() == 0) {
			throw new RuntimeException("Nome de produto não pode estar vazio");
		}
		return nome;
	}

	public void setNome(String nome) {
		this.nome = nome;
	}

	public float getPreco() {
		if (preco < 0) {
			throw new RuntimeException("Preço de produto não pode ser negativo");
		}
		return preco;
	}

	public void setPreco(float preco) {
		this.preco = preco;
	}

	@Override
	public String toString() {
		return "Produto [id=" + id + ", nome=" + nome + ", preco=" + preco + "]";
	}
	
	
}
